{
  "env": {
    "mocha": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:import/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": { "node": { "extensions": [".js"] } }
  },
  "rules": {
    "no-underscore-dangle": "off",
    "prettier/prettier": "error",
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    
  }
}
